        <activity 
            android:name="ua.study.english.SelectWords"
            android:label="@string/app_name" >
        </activity>
        <activity 
            android:name="ua.study.english.Study10Words"
            android:label="@string/app_name" >
        </activity>
        <activity 
            android:name="ua.study.english.CardTwoWord"
            android:label="@string/app_name" >
        </activity>
        <activity 
            android:name="ua.study.english.Statistics"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity 
            android:name="ua.study.english.Cadr25"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>
